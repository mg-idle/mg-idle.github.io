		"@types/eslint__js": "^8.42.3",
		"eslint": "^9.6.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-playwright": "^1.6.2",
		"eslint-plugin-svelte": "^2.41.0",
		"eslint-plugin-vitest": "^0.5.4",
		"globals": "^15.8.0",
